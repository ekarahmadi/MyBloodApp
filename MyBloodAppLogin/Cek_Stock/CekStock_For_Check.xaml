<Page
    x:Class="MyBloodAppLogin.Cek_Stock.CekStock_For_Check"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local ="clr-namespace:MyBloodAppLogin.Cek_Stock.UC_Hospital_Preview"
    
    Title="CekStock_For_Check"
    d:DesignHeight="800"
    d:DesignWidth="450"
    mc:Ignorable="d">

    <materialDesign:Card
        Margin="25"
        Background="{DynamicResource MaterialDesignPaper}"
        UniformCornerRadius="20">
        <Grid Grid.Row="3" Height="750">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="100" />
                <RowDefinition Height="565" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <!--Close and Minimize-->

            <!--  // Exit Button //  -->
            <Button
            x:Name="ExitBtn"
            Width="21"
            Height="27"
            Margin="364,11,0,0"
            HorizontalAlignment="Left"
            Click="ExitBtn_Click"
            RenderTransformOrigin="0.527,0.787"
            Style="{StaticResource CloseBtnStyle}" />

            <!--  // MinimizeButton //  -->
            <Button
            x:Name="MinimizeBtn"
            Width="21"
            Height="27"
            Margin="334,11,0,0"
            HorizontalAlignment="Left"
            Click="Minimize_Click"
            RenderTransformOrigin="0.4 ,0.787"
            Style="{StaticResource MinimizeBtnStyle}" />

            <!--Header Menu-->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="62"/>
                    <ColumnDefinition Width="388"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" x:Name="Logo" Source="/LOGO.png" Stretch="Fill" VerticalAlignment="Center" Height="68" Margin="20,0,-4,0"/>
                <TextBlock Grid.Column="1" x:Name="Welcome" Margin="14,28,18,0" TextWrapping="Wrap" Text="Kantong Darah App" FontFamily="Copperplate Gothic Bold" FontSize="18" VerticalAlignment="Top" d:LayoutOverrides="VerticalAlignment" Height="20"/>
                <TextBlock Grid.Column="1" TextWrapping="Wrap" Text="Cek Stok Darah Rumah Sakit" FontFamily="Copperplate Gothic Light" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="14,46,0,0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
            </Grid>

            <!--Hospital List-->
            <Grid Grid.Row="2">
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="188"/>
                        <RowDefinition Height="188"/>
                        <RowDefinition Height="188"/>
                    </Grid.RowDefinitions>

                    <!--Rumah Sakit Dr. Sardjito-->
                    <materialDesign:Card Grid.Row="0" Margin="15" Background="DarkRed" UniformCornerRadius="20">
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="210"/>
                            </Grid.ColumnDefinitions>

                            <!-- Foto Profile-->
                            <Image Grid.Column="0" x:Name="Sardjito_Square" Margin="4,4,0,2" Source="/Assets/Sardjito_Square.png" Stretch="Fill" d:LayoutOverrides="VerticalAlignment" HorizontalAlignment="Left" Width="126"/>

                            <!--Icon-->
                            <Grid Grid.Column="1">
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                    </Grid.RowDefinitions>
                                    <!--Icon-Icon-->
                                    <Image Grid.Row="1" Source="/Assets/img_maps.png"/>
                                    <Image Grid.Row="2" Source="/Assets/img_clock.png" VerticalAlignment="Center"  d:LayoutOverrides="Width" Height="46"/>
                                    <Image Grid.Row="3" Source="/Assets/img_telepon.png" VerticalAlignment="Center"  d:LayoutOverrides="Width" Height="46"/>
                                </Grid>
                            </Grid>

                            <!--Data RS-->
                            <Grid Grid.Column="2">
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                    </Grid.RowDefinitions>

                                    <!--Data-->
                                    <TextBlock Grid.Row="1" Margin="0,4,0,3" HorizontalAlignment="Left" FontFamily="Bahnschrift Light" Width="300" Foreground="White">
                                            <Run>Jl. Kesehatan No.1, Sendowo, Sinduadi </Run>
                                            <LineBreak/>
                                            <Run>Kec. Mlati, Sleman, DIY 55281</Run>
                                    </TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="Opens" Text="24 Jam" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontSize="18" Foreground="White"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="Telepon" Text="(0274) 631190" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift Light" FontSize="18" Foreground="White"/>
                                    <Label Grid.Row="0" Grid.Column="1" Content="Rumah Sakit dr. Sardjito" FontFamily="Bahnschrift SemiBold Condensed" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="22" Foreground="#DDFFFFFF" Margin="-25,0,0,0"/>

                                </Grid>

                            </Grid>
                        </Grid>
                    </materialDesign:Card>

                    <!--Rumah Sakit RSA UGM-->
                    <materialDesign:Card Grid.Row="1" Margin="15" Background="DarkRed" UniformCornerRadius="20">
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="210"/>
                            </Grid.ColumnDefinitions>

                            <!-- Foto Profile-->
                            <Image Grid.Column="0" x:Name="RSA_Square" Margin="4,4,0,2" Source="/Assets/RSA_Square.png" Stretch="Fill" d:LayoutOverrides="VerticalAlignment" HorizontalAlignment="Left" Width="126"/>

                            <!--Icon-->
                            <Grid Grid.Column="1">
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                    </Grid.RowDefinitions>
                                    <!--Icon-Icon-->
                                    <Image Grid.Row="1" Source="/Assets/img_maps.png"/>
                                    <Image Grid.Row="2" Source="/Assets/img_clock.png" VerticalAlignment="Center"  d:LayoutOverrides="Width" Height="46"/>
                                    <Image Grid.Row="3" Source="/Assets/img_telepon.png" VerticalAlignment="Center"  d:LayoutOverrides="Width" Height="46"/>
                                </Grid>
                            </Grid>

                            <!--Data RS-->
                            <Grid Grid.Column="2">
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                    </Grid.RowDefinitions>

                                    <!--Data-->
                                    <TextBlock Grid.Row="1" x:Name="AlamatRSA" Margin="0,4,0,3" HorizontalAlignment="Left" FontFamily="Bahnschrift Light" Width="300" Foreground="White">
                                        <Run>Jl. Kabupaten, Trihanggo </Run>
                                        <LineBreak/>
                                        <Run>Gamping, Sleman, DIY 55291 </Run>
                                    </TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="OpenRSA" Text="24 Jam" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontSize="18" Foreground="White"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TeleponRSA" Text="(0274) 4530404" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift Light" FontSize="18" Foreground="White"/>
                                    <Label Grid.Row="0" Grid.Column="1" Content="Rumah Sakit Akademik UGM" FontFamily="Bahnschrift SemiBold Condensed" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="22" Foreground="#DDFFFFFF" Margin="-25,0,0,0"/>

                                </Grid>

                            </Grid>
                        </Grid>
                    </materialDesign:Card>

                    <!--Rumah Sakit RSGM dr. Soedomo-->
                    <materialDesign:Card Grid.Row="2" Margin="15" Background="DarkRed" UniformCornerRadius="20">
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="210"/>
                            </Grid.ColumnDefinitions>

                            <!-- Foto Profile-->
                            <Image Grid.Column="0" x:Name="RSGM_Square" Margin="4,4,0,2" Source="/Assets/RSGM_Square.png" Stretch="Fill" d:LayoutOverrides="VerticalAlignment" HorizontalAlignment="Left" Width="126"/>

                            <!--Icon-->
                            <Grid Grid.Column="1">
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                    </Grid.RowDefinitions>
                                    <!--Icon-Icon-->
                                    <Image Grid.Row="1" Source="/Assets/img_maps.png"/>
                                    <Image Grid.Row="2" Source="/Assets/img_clock.png" VerticalAlignment="Center"  d:LayoutOverrides="Width" Height="46"/>
                                    <Image Grid.Row="3" Source="/Assets/img_telepon.png" VerticalAlignment="Center"  d:LayoutOverrides="Width" Height="46"/>
                                </Grid>
                            </Grid>

                            <!--Data RS-->
                            <Grid Grid.Column="2">
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                        <RowDefinition Height="39.5"/>
                                    </Grid.RowDefinitions>

                                    <!--Data-->
                                    <TextBlock Grid.Row="1" x:Name="AlamatRSGM" Margin="0,4,0,3" HorizontalAlignment="Left" FontFamily="Bahnschrift Light" Width="300" Foreground="White">
                    <Run>Jl. Denta Sekip Utara No.1, Sendowo,  </Run>
                    <LineBreak/>
                    <Run> Sinduadi, Mlati, Sleman, DIY 55281</Run>
                                    </TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="OpenRSGM" Text="08.00 - 20.00" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontSize="18" Foreground="White"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TeleponRSGM" Text="(0274) 55312" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift Light" FontSize="18" Foreground="White"/>
                                    <Label Grid.Row="0" Grid.Column="1" Content="RSGM dr. Soedomo UGM" FontFamily="Bahnschrift SemiBold Condensed" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="22" Foreground="#DDFFFFFF" Margin="-25,0,0,0"/>

                                </Grid>

                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <!--  Dock Bar Menu  -->
            <Grid
                Grid.Row="3"
                Grid.Column="4"
                Height="50"
                Width="400"
                    Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="303"/>
                    <ColumnDefinition Width="97"/>
                </Grid.ColumnDefinitions>

                <Border
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Background="DarkRed"
                CornerRadius="0,0,0,0" />

                <Grid Grid.ColumnSpan="3">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <!--  News  -->
                    <Button
                    x:Name="News"
                    Grid.Column="1"
                    Width="35"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource DockBtnStyle}">

                        <Button.Background>
                            <ImageBrush ImageSource="\Assets\news_button.png" Stretch="Uniform" />
                        </Button.Background>

                        <Popup
                    Width="80"
                    HorizontalOffset="21"
                    IsOpen="{Binding ElementName=News, Path=IsMouseOver, Mode=OneWay}"
                    PlacementTarget="{Binding ElementName=News}"
                    Style="{StaticResource PopupStyle}"
                    VerticalOffset="-10">

                            <Grid>

                                <Border Style="{StaticResource border}">

                                    <TextBlock Style="{StaticResource PopupText}" Text="News" />

                                </Border>

                                <Path Style="{StaticResource ArrowPath}" />

                            </Grid>

                        </Popup>

                    </Button>

                    <!--  Daftar Event  -->
                    <Button
                    x:Name="Event"
                    Grid.Column="2"
                    Width="35"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource DockBtnStyle}">

                        <Button.Background>
                            <ImageBrush ImageSource="\Assets\event_button.png" Stretch="Uniform" />
                        </Button.Background>

                        <Popup
                        Width="80"
                        HorizontalOffset="21"
                        IsOpen="{Binding ElementName=Event, Path=IsMouseOver, Mode=OneWay}"
                        PlacementTarget="{Binding ElementName=Event}"
                        Style="{StaticResource PopupStyle}"
                        VerticalOffset="-10">

                            <Grid>

                                <Border Style="{StaticResource border}">

                                    <TextBlock Style="{StaticResource PopupText}" Text="Event" />

                                </Border>

                                <Path Style="{StaticResource ArrowPath}" />

                            </Grid>

                        </Popup>

                    </Button>

                    <!--  Home  -->
                    <Button
                    x:Name="Home"
                    Grid.Column="3"
                    Width="35"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource DockBtnStyle}">

                        <Button.Background>
                            <ImageBrush ImageSource="\Assets\home_button.png" Stretch="Uniform" />
                        </Button.Background>

                        <Popup
                        Width="80"
                        HorizontalOffset="21"
                        IsOpen="{Binding ElementName=Home, Path=IsMouseOver, Mode=OneWay}"
                        PlacementTarget="{Binding ElementName=Home}"
                        Style="{StaticResource PopupStyle}"
                        VerticalOffset="-10">

                            <Grid>

                                <Border Style="{StaticResource border}">

                                    <TextBlock Style="{StaticResource PopupText}" Text="Home" />

                                </Border>

                                <Path Style="{StaticResource ArrowPath}" />

                            </Grid>

                        </Popup>

                    </Button>

                    <!--  Account  -->
                    <Button
                    x:Name="Account"
                    Grid.Column="4"
                    Width="35"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource DockBtnStyle}">

                        <Button.Background>
                            <ImageBrush ImageSource="\Assets\account_button.png" Stretch="Uniform" />
                        </Button.Background>

                        <Popup
                        Width="80"
                        HorizontalOffset="21"
                        IsOpen="{Binding ElementName=Account, Path=IsMouseOver, Mode=OneWay}"
                        PlacementTarget="{Binding ElementName=Account}"
                        Style="{StaticResource PopupStyle}"
                        VerticalOffset="-10">

                            <Grid>

                                <Border Style="{StaticResource border}">

                                    <TextBlock Style="{StaticResource PopupText}" Text="Account" />

                                </Border>

                                <Path Style="{StaticResource ArrowPath}" />

                            </Grid>

                        </Popup>
                    </Button>

                    <!--  Setting  -->
                    <Button
                    x:Name="Setting"
                    Grid.Column="5"
                    Width="35"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource DockBtnStyle}">

                        <Button.Background>
                            <ImageBrush ImageSource="\Assets\settings_button.png" Stretch="Uniform" />
                        </Button.Background>
                        <Popup
                        Width="80"
                        HorizontalOffset="21"
                        IsOpen="{Binding ElementName=Setting, Path=IsMouseOver, Mode=OneWay}"
                        PlacementTarget="{Binding ElementName=Setting}"
                        Style="{StaticResource PopupStyle}"
                        VerticalOffset="-10">

                            <Grid>

                                <Border Style="{StaticResource border}">

                                    <TextBlock Style="{StaticResource PopupText}" Text="Setting" />

                                </Border>

                                <Path Style="{StaticResource ArrowPath}" />

                            </Grid>

                        </Popup>
                    </Button>

                </Grid>

            </Grid>


        </Grid>



    </materialDesign:Card>
</Page>
